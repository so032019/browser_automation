# X自動化ツール設定ファイル例
# このファイルを .env にコピーして、実際の値を設定してください

# ===== 必須設定 =====
X_USERNAME=your_x_username
X_PASSWORD=your_x_password

# ===== 実行制御設定 =====
MAX_POSTS_PER_SESSION=5
DELAY_MIN=3
DELAY_MAX=7

# ===== ブラウザ設定 =====
HEADLESS=false
STEALTH_MODE=true

# カスタムブラウザパス（オプション）
# 利用可能なブラウザ:
# BROWSER_PATH=/usr/bin/google-chrome-stable    # Google Chrome Stable (推奨)
# BROWSER_PATH=/usr/bin/google-chrome           # Google Chrome
# BROWSER_PATH=/opt/google/chrome/google-chrome # Google Chrome (opt)
# BROWSER_PATH=/opt/google/chrome/chrome        # Chrome Binary (opt)
# BROWSER_PATH=/usr/bin/brave-browser           # Brave Browser
BROWSER_PATH=/usr/bin/google-chrome-stable

# ===== スクロール設定 =====
MAX_SCROLL_ATTEMPTS=10
ELEMENT_TIMEOUT=15000

# ===== Slack通知設定 =====
SLACK_API_URL=your_slack_api_url
SLACK_API_KEY=your_slack_api_key
SLACK_WORKSPACE=your_workspace_name

# ===== ログ設定 =====
LOG_DIR=logs
# LOG_DIR=/var/log/x_automation  # 絶対パスでの指定も可能
# LOG_DIR=./custom_logs          # 相対パスでの指定も可能

# ===== BAN対策設定 =====
# BAN対策機能の有効/無効
ENABLE_BAN_PREVENTION=true

# ホーム閲覧設定
ENABLE_HOME_BROWSING=true
HOME_SCROLL_COUNT_MIN=2
HOME_SCROLL_COUNT_MAX=4
HOME_POST_CHECK_COUNT_MIN=1
HOME_POST_CHECK_COUNT_MAX=2

# ポスト読み込み設定
POST_READING_MIN=2.0
POST_READING_MAX=5.0

# 返信確認設定
REPLY_CHECK_MIN=1
REPLY_CHECK_MAX=2

# アクション前後の待機設定
PRE_ACTION_WAIT_MIN=1.0
PRE_ACTION_WAIT_MAX=3.0
POST_ACTION_WAIT_MIN=1.0
POST_ACTION_WAIT_MAX=2.0

# 遅延変動係数（0.0-1.0）
DELAY_VARIATION_FACTOR=0.5

# ===== BAN対策設定例 =====
# 高速モード（BAN対策軽微）
# POST_READING_MIN=1.0
# POST_READING_MAX=2.0
# PRE_ACTION_WAIT_MIN=0.5
# PRE_ACTION_WAIT_MAX=1.0

# 安全モード（BAN対策強化）
# POST_READING_MIN=3.0
# POST_READING_MAX=7.0
# PRE_ACTION_WAIT_MIN=2.0
# PRE_ACTION_WAIT_MAX=4.0
